{
  "ci": {
    "collect": {
      "numberOfRuns": 2,
      "url": [
        "https://klymb.work/?cc=US&lang=en",
        "https://klymb.work/?cc=UK&lang=en",
        "https://klymb.work/?cc=DE&lang=de"
      ],
      "settings": {
        "formFactor": "mobile",
        "screenEmulation": {
          "mobile": true,
          "width": 360,
          "height": 640,
          "deviceScaleFactor": 2,
          "disabled": false
        }
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.6 }],
        "categories:accessibility": ["warn", { "minScore": 0.8 }],
        "categories:best-practices": ["warn", { "minScore": 0.9 }],
        "categories:seo": ["warn", { "minScore": 0.9 }]
      }
    }
  }
}

