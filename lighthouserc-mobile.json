{
  "ci": {
    "collect": {
      "numberOfRuns": 2,
      "url": [
        "https://klymb.work/?cc=US&lang=en",
        "https://klymb.work/profile?cc=US&lang=en",
        "https://klymb.work/?cc=UK&lang=en",
        "https://klymb.work/profile?cc=UK&lang=en",
        "https://klymb.work/?cc=DE&lang=de",
        "https://klymb.work/profile?cc=DE&lang=de"
      ],
      "settings": {
        "formFactor": "mobile",
        "screenEmulation": {
          "mobile": true,
          "width": 360,
          "height": 640,
          "deviceScaleFactor": 2,
          "disabled": false
        },
        "budgetsPath": "./lighthouse-budgets.json"
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.70 }],
        "categories:accessibility": ["error", { "minScore": 0.90 }],
        "categories:best-practices": ["error", { "minScore": 0.95 }],
        "categories:seo": ["error", { "minScore": 0.95 }]
      }
    }
  }
}
